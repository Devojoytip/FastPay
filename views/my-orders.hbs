<div class="welcome-flex">
    <div class="welcome-left">
        <h2>Hello! नमस्ते ! <span class="welcome">{{name}}</span> !</h2>
        <h5>Your orders आपके आदेश : </h5>
    </div>
</div>


{{#if orders}}
    {{#each orders}}
    {{#unless delivered}}
        {{#if shop}}
        <div class="flex">
            <div class="shopkeeper-shops" style="padding-bottom:20px">
                <div class="card" style="width: 18rem; border-left: 6px solid red;">
                    <div class="card-body">
                        <h5 class="card-title" style="color:black;font-weight:bold;font-size:16px">{{shop.shopNameTamil}} 
                            <a href="/order/{{_id}}/view" style="margin-left:20px" class="btn btn-dark btn-sm">Show प्रदर्शन</a>
                        </h5>
                        <p class="card-text" style="color:black;font-size:12px"><span class="welcome" style="font-weight:bold">Details विवरण :  <span class="welcome">{{date}} - {{time}}</span></span></p>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
    {{/unless}}
    {{/each}}
{{else}}
    <div>
        No Orders कोई आदेश नहीं
    </div>
{{/if}}

<br>
